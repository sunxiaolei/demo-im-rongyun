<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBgPrimary</item>
        <item name="android:textColor">@color/colorFontPrimary</item>
        <item name="android:textColorHint">@color/colorFontSecond</item>
        <item name="android:textColorPrimary">@color/colorFontPrimary</item>
    </style>

    <style name="NavigationTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ToolbarTheme" parent="Widget.AppCompat.Toolbar">
        <item name="background">?attr/actionBarItemBackground</item>
    </style>

</resources>
